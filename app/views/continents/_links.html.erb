<% if links.present? %>
  <% links.each do |link| %>

    <%= link_to link.url, class: "list-group-item list-group-item-action list-group-item-light" do %>
      <i class="bi bi-link"></i>
      <%= link.title %>
      <%= " Sort: #{link.sort}" if admin_user? %>
    <% end %>

  <% end %>
<% end %>
