<div class="form-group nested-fields py-2 px-1 border border-dark">

  <div class="row">
    <div class="col-2 d-flex align-items-center">
      <%= f.label :sort %>
    </div>
    <div class="col field form-group">
      <%= f.number_field :sort, class: "form-control" %>
    </div>
  </div>

  <div class="field form-group pt-2">
    <%= f.label :title %>
    <%#= f.text_field :title, value: f.object.title(fallback: false, default: nil), class: "form-control" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="field form-group pt-2">
    <%= f.label :url %>
    <%= f.text_field :url, class: "form-control" %>
  </div>
  <div class="col d-flex justify-content-end pt-1">
    <%= link_to_remove_association "Remove Link", f, class: 'btn btn-sm btn-outline-dark' %>
  </div>
</div>  
