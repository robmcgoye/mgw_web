<%= form_with( model: category, url: post_url ) do |form| %>
  <%= render 'shared/error_messages', resource: category %>
  <div class="row justify-content-end">
    <div class="col-10">
      <div class="form-check form-switch">
        <%= form.check_box :published, 
                class: "form-check-input", 
                id: "flexSwitchCheckPublished" %>
        <%= form.label :published,  class: "form-check-label", 
                    for: "flexSwitchCheckPublished" %>        
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-2 d-flex align-items-center">
      <%= form.label :sort %>
    </div>
    <div class="col field form-group">
      <%= form.number_field :sort, class: "form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>  
  <hr>

  <div class="form-group pt-2">
    <%= form.fields_for :links do |link| %>
      <%= render 'shared/link_fields', f: link %>
    <% end %>
    <div class="py-2">
      <%= link_to_add_association "Add Link", form, :links, class: 'btn btn-sm btn-dark', partial: 'shared/link_fields'%>
      
    </div>
  </div>

  <div class="actions pt-2">
    <%= form.submit btn_text, class: "btn btn-sm btn-outline-dark" %>
  </div>
<% end %>
